@model Usuarios

@{
    Layout = null; // Remova o layout principal para a tela de login
}

@if (TempData["MensagemErro"] != null) @* logica e estilização da mensagem de sucesso apois qualquer alteração nos dados pelo o usuario *@
{
    <div id="alerta" class="alert alert-danger">
        @TempData["MensagemAlerta"]
    </div>
}

@if (TempData["MensagemAlerta"] != null) @* logica e estilização da mensagem de erro caso qualquer alteração nos dados não tenha exito no salvamento *@
{
    <div id="alerta" class="alert alert-info">
        @TempData["MensagemAlerta"]
    </div>
}


<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Achernar - Sistema Pessoal</title>
    <link rel="stylesheet" href="~/css/LoginStyleSheet.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
        <div class="container">
            <div class="left-panel">
                <div class="social-icons">
                    <a href="https://www.linkedin.com/in/lucas-santos-93508a245/"><img src="https://img.icons8.com/ios/50/linkedin.png" alt="linkedin" /></a>
                    <a href="https://www.facebook.com/messier104ngc4594"><img src="https://img.icons8.com/ios/50/facebook--v1.png" alt="facebook--v1" /></a>
                    <a href="https://github.com/Messier104ngcc"><img src="https://img.icons8.com/glyph-neue/64/github.png" alt="github" /></a>
                </div>
                <div class="logo">
                    <img id="imglogo" src="~/img/LOGO.png" alt="Logo Achernar">
                </div>
            </div>

            <div class="right-panel">
                <div class="login-box">
                    <div class="forgot-support">
                        <a href="https://api.whatsapp.com/send?phone=5547999756192">Suporte</a>
                        <img src="https://img.icons8.com/external-vitaliy-gorbachev-fill-vitaly-gorbachev/60/external-support-online-shopping-vitaliy-gorbachev-fill-vitaly-gorbachev-2.png" alt="external-support-online-shopping-vitaliy-gorbachev-fill-vitaly-gorbachev-2" />
                    </div>
                    <div class="user-icon">
                        <img width="100" height="100" src="https://img.icons8.com/ios-filled/100/gender-neutral-user.png" alt="gender-neutral-user" />
                    </div>
                    <form asp-controller="Login" asp-action="CadastrarUsuario" method="post" autocomplete="off">
                        @* caminho para onde o formulario deve ir *@
                        <div class="form-container">
                            <form>
                                <div class="form-group">
                                    <label for="nome"><i class="bi bi-person-badge-fill"></i></label>
                                    <input type="text" asp-for="Nome" id="nome" name="nome" placeholder="Digite seu nome completo">
                                    <span class="text-danger" asp-validation-for="Nome"></span>
                                </div>
                                <div class="form-group">
                                    <label for="username"><i class="bi bi-person-fill"></i></label>
                                    <input type="text" asp-for="UserName" id="username" name="username" placeholder="Digite um usuário">
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                                <div class="form-group">
                                    <label for="senha"><i class="bi bi-key-fill"></i></label>
                                    <input type="password" asp-for="Senha" id="senha" name="senha" placeholder="Digite uma senha">
                                    <span class="text-danger" asp-validation-for="Senha"></span>
                                </div>
                                <div class="form-group">
                                    <label for="confsenha"><i class="bi bi-key-fill"></i></label>
                                    <input type="password" asp-for="ConfSenha" id="confsenha" name="confsenha" placeholder="Confirmar senha">
                                    <span class="text-danger" asp-validation-for="ConfSenha"></span>
                                </div>
                                <div class="button-group">
                                    <button class="btn">
                                        <a class="link-voltar" type="button" asp-controller="Login" asp-action="Index">Voltar</a>
                                    </button>
                                    <button type="submit" class="btn">Cadastrar</button>
                                </div>
                                <footer>
                                    <p>Copyright © 2024 - Todos os direitos reservados</p>
                                </footer>
                            </form>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    <script src="~/js/Login.js" asp-append-version="true"></script>
</body>
</html>


