@model Contas_Bancarias

@{
    ViewData["title"] = "Contas Bancarias"; 
}

@section Styles {
    <link rel="stylesheet" href="~/css/TelaBancosStyleSheet.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@if (TempData["MensagemSucesso"] != null) @* logica e estilização da mensagem de sucesso apois qualquer alteração nos dados pelo o usuario *@
{
    <div class="alert alert-success d-flex align-items-center" role="alert">

        <symbol id="info-fill" viewBox="0 0 16 16">
            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
            @TempData["MensagemSucesso"]
        </symbol>
    </div>
}
@if (TempData["MensagemErro"] != null) @* logica e estilização da mensagem de erro caso qualquer alteração nos dados não tenha exito no salvamento *@
{
    <div class="alert alert-danger d-flex align-items-center" role="alert">

        <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            @TempData["MensagemErro"]
        </symbol>
    </div>
}

<div class="container">
    <div class="card-corpo">
        <h4>Bancos</h4>
        <button id="btn-imprimir" type="button" class="btn btn-primary"><i class="bi bi-printer-fill mx-2"></i>Imprimir</button>
    </div>

    <h3>Contas Bancárias</h3>
    <span>Você poderá alterar ou deletar suas contas bancarias a qualquer momento</span>

    <div class="form-container-conta-principal">
        <fieldset>
            <form asp-controller="Bancos" asp-action="Salvar" method="post">
                <div class="form-container">
                    <legend>Conta Principal</legend>
                    <div class="form-group">
                        <label for="nomeConta">Nome da conta</label>
                        <input type="text" asp-for="Nome_Da_Conta" id="nomeConta" placeholder="Insira o nome da conta">
                        <span class="text-danger" asp-validation-for="Nome_Da_Conta"></span>
                    </div>
                    <div class="form-group">
                        <label for="saldoInicial">Saldo Inicial</label>
                        <input type="text" asp-for="Saldo_Inicial" id="saldoInicial" placeholder="Insira o saldo inicial">
                        <span class="text-danger" asp-validation-for="Saldo_Inicial"></span>
                    </div>
                    <div class="button-group">
                        <button type="submit" class="btn salvar">Salvar</button>
                        <a class="btn excluir">Excluir</a>
                    </div>
                </div>
            </form>
        </fieldset>
    </div>
    <div class="form-container-conta-segundaria">
        <fieldset>
            <form asp-controller="Bancos" asp-action="Salvar" method="post">
                <div class="form-container">
                    <legend>Conta Segundaria</legend>
                    <div class="form-group">
                        <label for="nomeConta">Nome da conta</label>
                        <input type="text" asp-for="Nome_Da_Conta" id="nomeConta" placeholder="Insira o nome da conta">
                        <span class="text-danger" asp-validation-for="Nome_Da_Conta"></span>
                    </div>
                    <div class="form-group">
                        <label for="saldoInicial">Saldo Inicial</label>
                        <input type="text" asp-for="Saldo_Inicial" id="saldoInicial" placeholder="Insira o saldo inicial">
                        <span class="text-danger" asp-validation-for="Saldo_Inicial"></span>
                    </div>
                    <div class="button-group">
                        <button type="submit" class="btn salvar">Salvar</button>
                        <a class="btn excluir">Excluir</a>
                    </div>
                </div>
            </form>
        </fieldset>
    </div>
</div>
<script src="~/js/site.js" asp-append-version="true"></script>
